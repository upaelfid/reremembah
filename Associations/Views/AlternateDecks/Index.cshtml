@model IEnumerable<Associations.Models.Deck>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DeckName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DeckName)
        </td>
        <td>

            @Html.ActionLink("Edit Deck", "IndexDeck", "Alternate", new { id=item.Id }, null) |
            @Html.ActionLink("View Deck", "Deck", "Alternate", new { id=item.Id }, null)
        </td>
